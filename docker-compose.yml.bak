version: '3.8'

services:
  web:
    image: nginx:latest
    container_name: ubuntu-web-1
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./www:/home/ubuntu/www
      - ./certs:/etc/letsencrypt
    depends_on:
      - php
    networks:
      - app-network

  php:
    image: php:7.4-fpm
    container_name: ubuntu-php-1
    volumes:
      - ./www:/home/ubuntu/www
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
